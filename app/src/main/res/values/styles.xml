<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/primary_accent</item>

        <item name="floatingHintEditTextStyle">@style/Widget.FloatingHintEditText</item>

    </style>

    <style name="AppTheme.Profile" parent="AppTheme" >
        <item name="colorPrimaryDark">@color/primary_accent</item>
    </style>

    <style name="Widget.FloatingHintEditText" parent="@android:style/Widget.EditText">
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="TabIndicator" />

    <style name="ProgressBar" />

    <style name="ProgressBar.Custom" parent="@style/ProgressBar" />

    <style name="ProgressBar.Custom.Download" parent="@style/ProgressBar.Custom">
        <item name="android:layout_margin">16dp</item>
        <item name="android:indeterminateDrawable">@drawable/custom_progress_circle</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:interpolator">@android:interpolator/anticipate_overshoot</item>
    </style>

</resources>
